@model List<Models.EntityFramework.Menu>
<div class="account_desc">
    @{
        var session =(UserLogin)Session[OnlineShop.Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
            <li><a href="@item.Link">@item.Text</a></li>
            }
        </ul>
    }
    else
    {
        <ul>
            <li>Xin chào: @session.UserName</li>
            <li>@Html.ActionLink("Đăng xuất","Logout","User")</li>
        </ul>
    }
</div>
<div class="clear"></div>